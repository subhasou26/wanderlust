<%layout("/layouts/boilerplate")%>
<body>
  <div class="row">
    <div class="col-8 offset-2">
        <h3>Create a new listings</h3>
        <br>
      <form action="/listings" method="POST" >
        <div class="mb-3">
          <label for="title" class="form-lable">Title</label>
          <input type="text" name="listing[title]" class="form-control" />
        </div>

        <div class="mb-3">
          <label for="description" class="form-lable">Description</label>
          <textarea
            name="listing[description]"
            cols="10"
            rows="5"
            class="form-control"
            
          ></textarea>
        </div>

        <div class="mb-3">
          <label for="image" class="form-lable">Image</label>
          <input type="text" name="listing[image]" class="form-control" />
        </div>

        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-lable">Price</label>
                <input type="number" name="listing[price]" class="form-control"  />
              </div>
      
              <div class="mb-3 col-md-8">
                  <label for="country" class="form-lable">Country</label>
                  <input type="text" name="listing[country]" class="form-control"  />
                </div>
        </div>
      

        <div class="mb-3">
          <label for="location" class="form-lable">Location</label>
          <input type="text" name="listing[location]" class="form-control" required/>
        </div>

        <button class="btn add-btn">Add</button>
      </form>
      <br><br>
    </div>
  </div>
</body>
